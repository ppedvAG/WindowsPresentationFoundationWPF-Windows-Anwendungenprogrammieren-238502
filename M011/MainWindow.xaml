<Window x:Class="M011.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:M011"
        Title="MainWindow" Height="300" Width="300"
		WindowStartupLocation="CenterScreen"
		Topmost="True">
    <StackPanel Margin="5, 0, 5, 10">
		<!--UserControl-->
		<!--Eigene WPF-Komponente, welche über Dependency Properties konfiguriert werden kann-->
		<!--Beispiel: ColorPicker-->
		<!--Slider + TextBox als UC auslagern-->
		<!--ColorPicker selbst zum UC machen-->
		<local:ColorPickerUC SelectedColor="Crimson"/>
	</StackPanel>
</Window>
